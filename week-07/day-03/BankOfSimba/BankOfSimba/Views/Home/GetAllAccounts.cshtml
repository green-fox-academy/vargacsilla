@model List<BankOfSimba.Models.BankAccount>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <table>
        @foreach (var account in Model)
        {
            <tr>
                <td>
                    <p>@(Model.IndexOf(account)+1)</p>
                </td>
                <td>
                    @if (account.IsKing)
                    {
                    <h1 style="color: yellow">@account.Name</h1>
                    }
                    else
                    {
                    <p>@account.Name</p>
                    }
                </td>
                <td>
                    <p>is @(account.IsKing ? "" : "not") a king</p>
                </td>
                <td>
                   @switch (account.GoodOrBad)
                    {
                        case BankOfSimba.Models.GoodOrBad.GoodOne:
                            <p> and a good one.</p>
                            break;
                        case BankOfSimba.Models.GoodOrBad.BadGuy:
                            <p> and a bad guy.</p>
                            break;
                        case BankOfSimba.Models.GoodOrBad.Depends:
                            <p> and depends on the situation if is good or bad.</p>
                            break;
                    }   
                </td>
            </tr>
        }
    </table>
</body>
</html>


